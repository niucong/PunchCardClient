<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handlers"
            type="com.niucong.punchcardclient.MainActivity.MainClickHandlers"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_sign"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="@{handlers::onClickName}"
                android:text="点击打卡"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/main_sync"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:onClick="@{handlers::onClickName}"
                android:visibility="gone"
                android:text="手动同步"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/main_plan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:onClick="@{handlers::onClickName}"
                android:text="查看计划"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_attendance"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="@{handlers::onClickName}"
                android:text="查看考勤"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/main_vacate"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:onClick="@{handlers::onClickName}"
                android:text="查看假条"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/main_member"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:onClick="@{handlers::onClickName}"
                android:text="人员管理"
                android:textSize="18dp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/main_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="打卡时间：无"/>
    </LinearLayout>
</layout>